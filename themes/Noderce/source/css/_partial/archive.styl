.archive-title
  color color-meta
  font-weight normal
  text-shadow 0 0 1px #fff
  background #fff
  padding 28px 28px 28px 28px
  box-shadow: 0 2px 6px rgba(100,100,100,0.3);
  margin-bottom 20px

@media screen and (max-width: 820px)
  .archive-title
    margin 10px 10px 20px 10px

.archive
  margin-bottom 50px

  ul
    list-style none
    margin-left 80px
    margin-top -60px
    li
      margin 7px 0
   
      time
        margin-right 8px
        color #666

  .archive-itme
    margin-bottom 20px
    padding-bottom 30px
    border-bottom 1px dashed #ddd


  .archive-year
    color #CF4646
    margin-bottom 18px
    font-size:16px
    font-weight:bold
    width:60px
    height:36px
    background-color:#EEE
    line-height:36px
    text-align:center
    border-top:3px solid #CF4646
 


