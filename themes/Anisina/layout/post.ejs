---
layout: layout
---

<!--only post-->
<% if (page['wechat-share']) { %>

<img class="wechat-title-img"
     src="<%- config['cdn-url'] %> <%= page['wechat-share'] || page['header-img'] %> <%- config['cdn-url'] ? config['clip-content'] : '' %>">
<% } else{ %>
<% if (page["cdn"] === 'header-off'){ %>
<img class="wechat-title-img" src="<%= page["header-img"] || config["post-default-img"] %>">
<% } else { %>
<img class="wechat-title-img"
     src="<%- page['header-img'] ? config['cdn-url'] + page["header-img"] : config["post-default-img"] %>">
<% } %>
<% } %>

<style>
    <% if (page["cdn"] === 'header-off'){%>
    header.intro-header {
        background-image: url('<%= page["header-img"] || config["post-default-img"]%>');
    }
    <%} else {%>
    
    header.intro-header {
      background-image: url('<%- page["header-img"]?config["cdn-url"]+page["header-img"]+config["clip-content"]: config["post-default-img"]%>')
    
    }
    <% } %>

    article li a{
      word-break:break-all;
    }
</style>

<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 text-center">
                <div class="post-heading">
                    <h1><%= page.title %></h1>
                    <% if(page.subtitle) { %>
                    <h2 class="subheading"><%= page.subtitle %></h2>
                    <% } %>
                    <span class="meta">
                         <span>作者 <%- page.author || config.author %></span>
                        <span>
                          日期 <%= page.date.format(config.date_format) %>
                         </span>  <span class="post-count">字数 <%= wordcount(page.content)%></span> 
                    </span>
                    <div class="tags text-center">
                        <% page.tags.forEach(function(tag){ %>
                        <a class="tag" href="<%= config.root %>tags/#<%= tag.name %>"
                           title="<%= tag.name %>"><%= tag.name %></a>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="post-title-haojen">
        <span>
            <%- page.title %>
        </span>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <!-- Post Container -->
            <div class="col-lg-8 col-lg-offset-1 col-sm-9 post-container">
                <%- page.content %>
		<br>
		<br>
                <hr>
		<!--文章结束标志-->
		<div style="font-weight:bold;text-align:center;line-height:4em;color:#eeeeee;font-size:1em;display:block;margin:-2em auto 0 auto;background-color:#ff7e79;width:4em;height:4em;border-radius:2em;padding:0">本文完</div>
		<br>
		<!--文章后记-->
		<blockquote style="border:.3em solid #eeeeee;word-wrap: break-word;font-weight:bold;">
		<p style="text-align:left;">本文如有误，请不吝赐教！</p>
	        <p style="text-align:left;">原文链接：<a href="<%= page.permalink%>"><%= page.permalink%></a></p>
		<p style="text-align:left;">版权声明：自由转载-非商用-非衍生-保持署名 | <a href='http://creativecommons.org/licenses/by-nc-nd/3.0/deed.zh'>Creative Commons BY-NC-ND 3.0</a></p>
		</blockquote>
		

                <!--上一篇文章，下一篇文章-->
		<ul class="pager">
                    <% if (page.prev){ %>
                    <li class="previous">
                        <a href="<%- config.root %><%- page.prev.path %>" data-toggle="tooltip" data-placement="top"
                           title="<%- page.prev.title %>">&larr; Previous Post</a>
                    </li>
                    <% } %>
                    <% if (page.next){ %>
                    <li class="next">
                        <a href="<%- config.root %><%- page.next.path %>" data-toggle="tooltip" data-placement="top"
                           title="<%- page.next.title %>">Next Post &rarr;</a>
                    </li>
                    <% } %>
                </ul>




		<% if(config.wangyiyungengtie) { %>
		<!--云跟帖热文-->
		<div id="hot-news-wrap"></div>
                <!-- 网易云跟帖 Share start -->
		<div id="cloud-tie-wrapper" class="cloud-tie-wrapper"></div>
                <!-- 网易云跟帖 Share end-->
                <% } %>


            </div>

            <div class="hidden-xs col-sm-3 toc-col">
                <div class="toc-wrap">
                    <%- toc(page.content, {list_number: false}) %>
                </div>
            </div>
        </div>

	<!--display:none;去掉文章下面的标签，因为文章上面已经有标签了-->
        <div class="row" style="display:none;">
            <!-- Sidebar Container -->

            <div class="
                col-lg-8 col-lg-offset-2
                col-md-10 col-md-offset-1
                sidebar-container">

                <!-- Featured Tags -->
                <% if(config['featured-tags']) { %>
                <section>
                    <!-- no hr -->
                    <h5 class="text-center">
                        <a href="<%= config.root %>tags/">FEATURED TAGS</a>
                    </h5>
		
                    <div class="tags">
                        <% page.tags.forEach(function(tag){ %>
                        <a class="tag" href="<%= config.root %>tags/#<%= tag.name %>"
                           title="<%= tag.name %>"><%= tag.name %></a>
                        <% }) %>
                    </div>
                </section>
                <% } %>
                <!-- Friends Blog -->
                <% if(config.friends) { %>
                <div style="margin-top: 20px;">
                    <h5 class="text-center">FRIENDS</h5>
                    <ul class="list-inline text-center">
                        <% config.friends.forEach(function(friend){ %>
                        <li><a href="<%= friend.href %>"><%= friend.title %></a></li>
                        <% }); %>
                    </ul>
                </div>
                <% } %>
            </div>
        </div>

    </div>
</article>


<% if(config['anchorjs']) { %>
<!-- async load function -->
<script>
    function async(u, c) {
        var d = document, t = 'script',
                o = d.createElement(t),
                s = d.getElementsByTagName(t)[0];
        o.src = u;
        if (c) {
            o.addEventListener('load', function (e) {
                c(null, e);
            }, false);
        }
        s.parentNode.insertBefore(o, s);
    }
</script>
<!-- anchor-js, Doc:http://bryanbraun.github.io/anchorjs/ -->
<script>
    async("http://cdn.bootcss.com/anchor-js/1.1.1/anchor.min.js", function () {
        anchors.options = {
            visible: 'always',
            placement: 'right',
            icon: '#'
        };
        anchors.add().remove('.intro-header h1').remove('.subheading').remove('.sidebar-container h5');
    })
</script>
<style>
    /* place left on bigger screen */
    @media all and (min-width: 800px) {
        .anchorjs-link {
            position: absolute;
            left: -0.75em;
            font-size: 1.1em;
            margin-top: -0.1em;
        }
    }
</style>
<% } %>

